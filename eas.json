{
  "cli": {
    "version": ">= 3.17.1",
    "promptToConfigurePushNotifications": false
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal"
    },
    "androidAPK": {
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "env": {
        "EAS_BUILD_DISABLE_COCOAPODS_CACHE": "1"
      },
      "cache": {
        "paths": ["./ios/Podfile.lock"]
      }
    }
  },
  "submit": {
    "production": {}
  }
}
